<Window x:Class="PL.DeleteBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DeleteBusWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
        <Label Content="DELETE BUS" FontSize="40" Margin="0,0,0,30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Content="Enter bus number to delete:" FontSize="25" Margin="20,0,20,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        
        </StackPanel>
    </Grid>
</Window>
