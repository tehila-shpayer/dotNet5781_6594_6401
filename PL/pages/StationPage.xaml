<Page x:Class="PL.StationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="BusLinePage" Background="White">
    <Page.Resources>
        <DataTemplate x:Key="StationTemplate" DataType="local:Station">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="230">
                <TextBlock Text="{Binding Name}" TextAlignment="Right" FontWeight="Bold" FontSize="15" FontFamily="Segoe UI Black"/>
                <TextBlock Text="{Binding Key}" TextAlignment="Right" FontSize="15"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="LineTemplate" DataType="local:int">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Width="230">
                <TextBlock Text="{Binding}" TextAlignment="Right" FontWeight="Bold" FontSize="15" FontFamily="Segoe UI Black"/>
                <!--<TextBlock Text="{Binding Key}" TextAlignment="Right" FontSize="15"/>-->
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid ScrollViewer.CanContentScroll="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="LightGray" Offset="1"/>
                <!--<GradientStop Color="#FFA6C8D1" Offset="0.25"/>
                <GradientStop Color="#FFD9DCDD" Offset="0.086"/>
                <GradientStop Color="#FFBBD0D6" Offset="0.18"/>
                <GradientStop Color="#FFABC9D1" Offset="0.608"/>
                <GradientStop Color="#FFC7D0D2" Offset="0.46"/>-->
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Stations:" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Bold" FontSize="30"/>
        <StackPanel Grid.Row="1" Grid.Column="1" x:Name="spStations">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="LightGray" Offset="1"/>
                    <GradientStop Color="#FFA6C8D1" Offset="0.25"/>
                    <GradientStop Color="#FFD9DCDD" Offset="0.086"/>
                    <GradientStop Color="#FFBBD0D6" Offset="0.18"/>
                    <GradientStop Color="#FFABC9D1" Offset="0.608"/>
                    <GradientStop Color="#FFC7D0D2" Offset="0.46"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <StackPanel>
                <TextBox x:Name="searchBox" FontSize="16" TextChanged="SearchBox_TextChanged" Background="White" BorderBrush="#FF1D2744" Height="30"/>
                <materialDesign:PackIcon Kind="Search" Margin="0,-28,10,5" Width="25" Height="25" HorizontalAlignment="Right" Foreground="Gray"/>
            </StackPanel>
            <ListBox x:Name="lbStations" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" ItemTemplate="{StaticResource StationTemplate}" BorderBrush="#FF222222" SelectionChanged="stations_SelectionChanged" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="439" Margin="0,0,0.4,0">
            </ListBox>
        </StackPanel>
        <!--<ListBox x:Name="busLineStationdlb" Grid.Row="1" Grid.Column="0" IsSynchronizedWithCurrentItem="{x:Null}" ItemsSource="{Binding}" ItemTemplate="{StaticResource BusLineStationTemplate}" VerticalAlignment="Stretch" Background="White" FontSize="14" FontFamily="Segoe UI Emoji"/>-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="updateButton" Width="145" Margin="0,10,5,10" Background="#FF477AA9" Content="UPDATE STATION"/>
            <Button x:Name="deleteButton" Width="145" Margin="5,10" Content="DELETE STATION" Background="#FF477AA9"/>
            <Button x:Name="addButton" Width="145" Margin="5,10,15,10" Content="ADD STATION" Background="#FF477AA9"/>
        </StackPanel>

        <Rectangle Grid.Column="0" Grid.Row="1" Fill="White" Margin="60" RadiusX="10" RadiusY="10" Stroke="#FF3C61CA">
        </Rectangle>
        <Grid x:Name="StationInfoGrid" Grid.Column="0" Grid.Row="1" Margin="80" DataContext="{Binding}">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>-->
            <StackPanel Grid.Column="0">
                <TextBlock Text="{Binding Name}" Margin="0" TextAlignment="Right" FontWeight="Bold" FontSize="20" FontFamily="Segoe UI Black"/>
                <TextBlock Text="{Binding Key}" Margin="5" TextAlignment="Right" FontSize="18"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Background="#FF477AA9">
                        <materialDesign:PackIcon Kind="MapMarkerOutline" Height="30" Width="30"/>
                    </Button>

                    <TextBlock FontSize="18" TextAlignment="Right" Margin="15" FontFamily="Segoe UI Emoji">
                    <Run Text="{Binding Latitude}"/>
                    <Run Text="N° ,"/>
                    <Run Text="{Binding Longitude}"/>
                    <Run Text="E°"/>
                    </TextBlock>

                </StackPanel>
                <TextBlock FontSize="18" Text=":קווים העוברים בתחנה" TextAlignment="Right" Margin="15" FontFamily="Segoe UI Emoji"/>
                <ListBox x:Name="lbLines" ItemsSource="{Binding BusLines}" FontSize="18" FontFamily="Segoe UI Emoji" IsSynchronizedWithCurrentItem="True" ItemTemplate="{StaticResource StationTemplate}" SelectionChanged="stations_SelectionChanged" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Visible">

                    </ListBox>
            </StackPanel>
        </Grid>

        <!--<TextBlock Grid.Row="1" Grid.Column="0" TextAlignment="Left" Margin="10,0,10,10">
                    <Run Text="|&#x0a;|"/>
                    <Run Text="{Binding DistanceFromLastStationMeters}"/>
                    <Run Text="meters,"/>
                    <Run Text="{Binding TravelTimeFromLastStationMinutes}"/>
                    <Run Text="minutes&#x0a;"/>
                    <Run Text="|&#x0a;"/>
        </TextBlock>-->
    </Grid>
</Page>

