<Application x:Class="dotNet5781_03B_6594_6401.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dotNet5781_03B_6594_6401"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="myMainLableStyle" TargetType="Label">
            <Setter Property="Background" Value="#FFE5D6D6"/>
            <Setter Property="BorderBrush" Value="#FFC76868"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="FontFamily" Value="Showcard Gothic"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="myAddWindowLableStyle" TargetType="Label">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="FontFamily" Value="Sitka Text"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,10,10,10"/>
        </Style>
    </Application.Resources>
</Application>
