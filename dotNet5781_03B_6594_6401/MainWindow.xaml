<Window x:Class="dotNet5781_03B_6594_6401.MainWindow"
	   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:dotNet5781_03B_6594_6401">
    <!--xmlns:local="clr-namespace:DataTemplates">-->
    <Window.Resources>
        <DataTemplate x:Key="BusTemplate"
                  DataType="local:Bus">

            <StackPanel Orientation="Horizontal" >
                <TextBlock 
                   Text="Bus license number: " />
                <TextBlock Grid.Column="1" Width="120" x:Name="licenseNumber"
                   Text="{Binding Path=LicenseNumberFormat}" />
                <Button Width ="70" x:Name="RideButton" Content="go to ride!" Click="rideButton_Click"/>
                <Label Width="20"/>
                <Button Width ="50" x:Name="RefuelButton" Content="refuel" Click="RefuelButton_Click"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="319*"/>
            <ColumnDefinition Width="474*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="200*"/>

        </Grid.RowDefinitions>
        <Button x:Name="addButton" Click="addButton_Click" Content="add bus" Grid.Column="1" Grid.Row="0" FontSize="30" FontFamily="Showcard Gothic" Margin="0"/>
        <ListBox IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" ItemTemplate="{StaticResource BusTemplate}" x:Name="busesList"  Grid.Column="0" Grid.Row="1" Margin="0,0.2,0.4,0.6" MouseDoubleClick="busesList_MouseDoubleClick"/>
        <Label Content="Buses in the system: " Grid.Row="0" RenderTransformOrigin="0.5,0.5" Margin="0,0,0.333,0" Style="{StaticResource myMainLableStyle}"/>
    </Grid>
</Window>
    
